<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5757"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="124dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:textColor="#f6ff0d"
        android:textSize="24sp"
        tools:text="AN ACCIDENT \n HAS BEEN DETECTED" />

    <TextView
        android:id="@+id/tv_timer_accident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center_horizontal"
        android:textColor="#f6ff0d"
        android:textSize="60sp"
        tools:text="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center_horizontal"
        android:textColor="#f6ff0d"
        android:textSize="16sp"
        tools:text="Count Down" />


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_yellow_rounded"
        android:fontFamily="@font/notosans_bold"
        android:text="CANCEL"
        android:textColor="#ff5757"
        android:textSize="30sp" />

</LinearLayout>