<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.driving.DrivingFragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="107dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="34.2dp"
        android:fontFamily="@font/notosans_regular"
        android:text="Shall we go?"
        android:textColor="@color/textColor"
        android:textSize="28sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginBottom="31.8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_car_moving" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_blue_rounded"
        android:fontFamily="@font/notosans_bold"
        android:text="START!"
        android:textColor="#45c5ff"
        android:textSize="30sp" />

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/notosans_regular"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In case of a car accident while driving, \n the application will automatically contact 119\n and emergency contacts."
        android:textColor="@color/textColor" />


</LinearLayout>