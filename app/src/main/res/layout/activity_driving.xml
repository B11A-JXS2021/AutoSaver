<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45c5ff"
    android:orientation="vertical"
    tools:context=".ui.driving.DrivingFragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="85dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="41.1dp"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="10sp"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="normal"
        tools:text="The sensor \nis operating." />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="38.7dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_car_staying" />

    <Button
        android:id="@+id/btn_end"
        android:layout_width="233dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_blue_rounded"
        android:fontFamily="@font/notosans_bold"
        android:text="END OF DRIVE"
        android:textColor="#45c5ff"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center"
        android:text="In case of a car accident while driving, \n the application will automatically contact 119\n and emergency contacts."
        android:textColor="#ffffff"
        android:textSize="12sp" />

</LinearLayout>